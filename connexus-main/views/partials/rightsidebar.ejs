<div class="col-lg-12 right-sidebar"> <!-- 12-column grid layout -->
    <div class="sticky-top">
        <h4>Controls</h4>
        <div class="mb-3">
            <input type="number" min="1" id="globalItemCount" placeholder="Show items" class="form-control" value="3">
            <button class="btn btn-primary mt-2" onclick="setGlobalItemCount()">Set Item Count</button>
            <button class="btn btn-secondary mt-2" onclick="scrollToTop()">Move to Top</button>
        </div>
    </div>

    <div class="sidebar">
        <h4>Navigation</h4>
        <ul class="list-group">
            <li class="list-group-item"><a href="#projects">Projects</a></li>
            <li class="list-group-item"><a href="#achievements">Achievements</a></li>
            <li class="list-group-item"><a href="#job-postings">Job Postings</a></li>
            <li class="list-group-item"><a href="#discussion-posts">Discussion Posts</a></li>
            <li class="list-group-item"><a href="#groups-joined">Groups Joined</a></li>
            <li class="list-group-item"><a href="#quizzes-participated">Quizzes Participated</a></li>
            <li class="list-group-item"><a href="#events-organized">Events Organized</a></li>
        </ul>

        <h4>Quick Links</h4>
        <ul class="list-group">
            <% if (user.projects.length > 0) { %>
                <h5>Projects</h5>
                <% user.projects.forEach(project => { %>
                    <li class="list-group-item">
                        <a href="/projects/<%= project._id %>"><%= project.title %></a>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No projects available.</li>
            <% } %>

            <% if (user.achievements.length > 0) { %>
                <h5>Achievements</h5>
                <% user.achievements.forEach(achievement => { %>
                    <li class="list-group-item">
                        <a href="/achievements/<%= achievement._id %>"><%= achievement.title %></a>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No achievements available.</li>
            <% } %>

            <% if (user.jobPosts.length > 0) { %>
                <h5>Job Postings</h5>
                <% user.jobPosts.forEach(job => { %>
                    <li class="list-group-item">
                        <a href="/jobs/<%= job._id %>"><%= job.title %></a>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No job postings available.</li>
            <% } %>

            <% if (user.discussionPosts.length > 0) { %>
                <h5>Discussion Posts</h5>
                <% user.discussionPosts.forEach(discussion => { %>
                    <li class="list-group-item">
                        <a href="/discussions/<%= discussion._id %>"><%= discussion.title %></a>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">No discussion posts available.</li>
            <% } %>

            <!-- Add similar blocks for other sections like Groups Joined, Quizzes Participated, Events Organized -->

        </ul>
    </div>
</div>
